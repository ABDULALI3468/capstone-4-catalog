require_relative 'cli'

def main
  cli = Cli.new
  loop do
    choice = cli.print_main_menu
    case choice
    when 1
      puts 'Listing all items'
    when 2
      puts 'Getting items by ID'
    when 'Q'
      puts 'App quitting gracefully..'
      break
    else
      puts 'Invalid option'
    end
  end
end
